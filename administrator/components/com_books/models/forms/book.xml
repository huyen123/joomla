<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldpath="/administrator/components/com_categories/models/fields">
		<field
			name="id"
			type="text"
			label="JGLOBAL_FIELD_ID_LABEL"
			description="JGLOBAL_FIELD_ID_DESC"
			class="readonly"
			readonly="true"
			default="0"
			labelclass="control-label"
			labelClass="control-label"
		/>

		<field
			name="title"
			type="text"
			label="JGLOBAL_TITLE"
			description="COM_BOOKS_BOOK_FIELD_TITLE_DESC"
			required="true"
			labelclass="control-label"
			labelClass="control-label"
		/>

		<field
			name="author"
			type="text"
			label="Author"
			description="COM_BOOKS_BOOK_FIELD_AUTHOR_DESC"
			labelclass="control-label"
			labelClass="control-label"
		/>

		<field
			name="alias"
			type="text"
			label="JFIELD_ALIAS_LABEL"
			description="COM_BOOKS_BOOK_FIELD_ALIAS_DESC"
			labelclass="control-label"
			labelClass="control-label"
		/>

		<field
			name="cat_id"
			type="categoryedit"
			label="JCATEGORY"
			description="COM_BOOKS_BOOK_FIELD_CATEGORY_DESC"
			extension="com_books"
			labelclass="control-label"
			labelClass="control-label"
		/>

		<field
			name="description"
			type="editor"
			label="JGLOBAL_DESCRIPTION"
			description="COM_BOOKS_BOOK_FIELD_DESCRIPTION_DESC"
			buttons="true"
			hide="pagebreak, readmore"
			filter="safehtml"
			labelclass="control-label"
			labelClass="control-label"
		/>

		<field
			name="featured"
			type="list"
			label="JFEATURED"
			description="COM_BOOKS_FIELD_FEATURED_DESC"
			default="0"
			labelclass="control-label"
			labelClass="control-label"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>

		<field
			name="state"
			type="list"
			label="JSTATUS"
			description="COM_BOOKS_BOOK_FIELD_STATE_DESC"
			size="1"
			default="1"
			labelclass="control-label"
			labelClass="control-label"
		>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>

		<field
			name="access"
			type="accesslevel"
			label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC"
			size="1"
			labelclass="control-label"
			labelClass="control-label"
		/>

		<field
			name="language"
			type="contentlanguage"
			label="JFIELD_LANGUAGE_LABEL"
			description="COM_BOOKS_BOOK_FIELD_LANGUAGE_DESC"
			labelclass="control-label"
			labelClass="control-label"
		>
			<option value="*">JALL</option>
		</field>

		<field
			name="created"
			type="calendar"
			label="JGLOBAL_FIELD_CREATED_LABEL"
			description="JGLOBAL_FIELD_CREATED_DESC"
			size="22"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc"
			labelclass="control-label"
			labelClass="control-label"
		/>

		<field
			name="created_by"
			type="user"
			label="JGLOBAL_FIELD_CREATED_BY_LABEL"
			description="JGLOBAL_FIELD_CREATED_BY_DESC"
			labelclass="control-label"
			labelClass="control-label"
		/>

		<field
			name="created_by_alias"
			type="text"
			label="JGLOBAL_FIELD_CREATED_BY_ALIAS_LABEL"
			description="JGLOBAL_FIELD_CREATED_BY_ALIAS_DESC"
			size="20"
			labelclass="control-label"
			labelClass="control-label"
		/>

		<field
			name="modified"
			type="calendar"
			label="JGLOBAL_FIELD_MODIFIED_LABEL"
			description="COM_BOOKS_BOOK_FIELD_MODIFIED_DESC"
			size="22"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc"
			labelclass="control-label"
			labelClass="control-label"
		/>

		<field
			name="modified_by"
			type="user"
			label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
			description="JGLOBAL_FIELD_MODIFIED_BY_DESC"
			class="readonly"
			readonly="true"
			filter="unset"
			labelclass="control-label"
			labelClass="control-label"
		/>

		<field
			name="checked_out"
			type="hidden"
			filter="unset"
		/>

		<field
			name="checked_out_time"
			type="hidden"
			filter="unset"
		/>

		<field
			name="short_description"
			type="textarea"
			label="COM_BOOKS_BOOK_FIELD_SHORT_DESCRIPTION_LABEL"
			description="COM_BOOKS_BOOK_FIELD_SHORT_DESCRIPTION_DESC"
			buttons="true"
			labelclass="control-label"
		/>

		<field
			name="price"
			type="text"
			label="COM_BOOKS_BOOK_FIELD_PRICE_LABEL"
			description="COM_BOOKS_BOOK_FIELD_PRICE_DESC"
			labelclass="control-label"
			labelClass="control-label"
		/>

		<field
			name="thumbnail"
			type="media"
			label="COM_BOOKS_BOOK_FIELD_THUMBNAIL_LABEL"
			description="COM_BOOKS_BOOK_FIELD_THUMBNAIL_DESC"
			labelclass="control-label"
			labelClass="control-label"
		/>


		<field
			name="hits"
			type="text"
			label="COM_BOOKS_BOOK_FIELD_HITS_LABEL"
			description="COM_BOOKS_BOOK_FIELD_HITS_DESC"
			labelclass="control-label"
			labelClass="control-label"
		/>


	</fieldset>


</form>
